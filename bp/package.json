{
  "name": "bp-2.0",
  "version": "1.0.0",
  "description": "",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsup",
    "build:ts": "tsup --env.NODE_ENV production",
    "copy:assets": "cpy 'src/generated/*.json' dist/generated",
    "dev": "pnpm dev:watch",
    "dev:watch": "tsx watch src/server.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky",
    "start": "tsx src/server.ts",
    "start:prod": "HYPERDX_API_KEY='bb2f34d0-55eb-4623-94e8-087962d2cc67' OTEL_SERVICE_NAME='fastify-starter' npx opentelemetry-instrument dist/server.js",
    "test": "cross-env TS_NODE_FILES=true tap test/**/*.test.ts",
    "typecheck": "tsc -b",
    "generate": "npx plop --plopfile ./generators/plopfile.js"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,css,md}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "5.8.0",
    "@fastify/cors": "9.0.1",
    "@fastify/env": "4.3.0",
    "@fastify/etag": "5.1.0",
    "@fastify/helmet": "11.1.1",
    "@fastify/multipart": "8.1.0",
    "@fastify/rate-limit": "9.1.0",
    "@fastify/sensible": "5.5.0",
    "@fastify/swagger": "8.14.0",
    "@fastify/swagger-ui": "2.1.0",
    "@fastify/type-provider-typebox": "^3.5.0",
    "@sinclair/typebox": "^0.31.25",
    "close-with-grace": "^1.2.0",
    "dotenv": "16.4.1",
    "fastify": "4.26.0",
    "fastify-cli": "6.1.0",
    "fastify-plugin": "4.5.1",
    "fastify-tsconfig": "2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.1",
    "pino": "^8.16.2",
    "swagger-jsdoc": "^6.2.8",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@tapjs/test": "1.4.0",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/dotenv": "8.2.0",
    "@types/node": "20.11.16",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/tap": "15.0.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "concurrently": "^8.2.2",
    "cpy-cli": "^5.0.0",
    "cross-env": "7.0.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-productsway": "1.3.1",
    "eslint-plugin-prettier": "5.0.1",
    "fastify-tsconfig": "^2.0.0",
    "husky": "9.0.10",
    "lint-staged": "15.2.2",
    "pino-pretty": "^10.2.3",
    "plop": "^4.0.0",
    "prettier": "3.2.5",
    "sort-package-json": "2.7.0",
    "tap": "^18.7.0",
    "ts-node": "10.9.2",
    "tsup": "8.0.1",
    "tsx": "4.7.0",
    "typescript": "5.3.3"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=18.17.0"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "format": [
      "cjs",
      "esm"
    ],
    "legacyOutput": true,
    "target": "es2018",
    "onSuccess": "npm run copy:assets"
  }
}
